<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Enigma3k1" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Card style -->
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.Enigma3k1" parent="Base.Theme.Enigma3k1" />

    <!-- AppTheme mit korrekter Vererbung -->
    <style name="AppTheme" parent="Theme.Enigma3k1" />
</resources>