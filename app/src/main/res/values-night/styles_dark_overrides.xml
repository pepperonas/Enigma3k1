<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme button overrides with improved contrast -->
    <style name="Widget.App.Button.DarkOverride" parent="Widget.App.Button">
        <item name="backgroundTint">@color/accent_light</item>
        <item name="android:textColor">@color/dark_text_on_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.DarkOverride" parent="Widget.App.Button.OutlinedButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.Toggle.DarkOverride" parent="Widget.App.Button.Toggle">
        <item name="backgroundTint">@color/background_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/accent_light</item>
        <item name="strokeColor">@color/accent_light</item>
    </style>

    <style name="Widget.App.ProcessButton.DarkOverride" parent="Widget.App.ProcessButton">
        <item name="backgroundTint">@color/accent_light</item>
        <item name="android:textColor">@color/dark_text_on_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.SectionCard.DarkOverride" parent="Widget.App.SectionCard">
        <item name="cardBackgroundColor">@color/background_light</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.DarkOverride" parent="Widget.App.TextInputLayout">
        <item name="boxStrokeColor">@color/accent_light</item>
        <item name="hintTextColor">@color/accent_light</item>
        <item name="android:textColorHint">@color/accent_light</item>
        <item name="boxBackgroundColor">@color/card_background</item>
    </style>
</resources>