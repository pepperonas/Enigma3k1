<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Wenn der Toggle-Button aktiviert ist (Passwort anzeigen) -->
    <item android:drawable="@drawable/ic_visibility_on" android:state_checked="true" />

    <!-- Wenn der Toggle-Button deaktiviert ist (Passwort verbergen) -->
    <item android:drawable="@drawable/ic_visibility_off" android:state_checked="false" />

    <!-- Standard-Zustand (Passwort verbergen) -->
    <item android:drawable="@drawable/ic_visibility_off" />
</selector>